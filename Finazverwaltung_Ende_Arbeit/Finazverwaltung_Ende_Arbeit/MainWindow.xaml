<Window x:Class="Finazverwaltung_Ende_Arbeit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finazverwaltung_Ende_Arbeit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Anmeldung in die Finazverwaltung" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontStyle="Italic"/>
        <Label Content="Nutzername:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Passwort:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="nutzername" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="550" Margin="10 10"/>
        <PasswordBox Grid.Row="2" Grid.Column="0" x:Name="password" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="550" Margin="10 10"/>
        <Button Content="Beenden" x:Name="close" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="close_Click" Width="380"/>
        <Button Content="Login" x:Name="login" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="login_Click" Width="380"/>
    </Grid>
</Window>
